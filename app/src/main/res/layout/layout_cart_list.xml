<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="140dp"
            android:layout_height="match_parent"

            android:contentDescription="@string/order_product_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            tools:ignore="MissingClass">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/order_product_name"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:srcCompat="@android:drawable/btn_dialog" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_provider"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_price" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/amount"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    app:backGroundColor="@color/white"
                    app:finalNumber="100"
                    app:initialNumber="1"
                    app:textColor="@color/colorPrimaryDark"
                    app:textSize="5dp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                <TextView
                    android:id="@+id/measure"
                    style="@style/heading_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="Táº¥n"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
