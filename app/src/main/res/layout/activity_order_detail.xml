<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_order_detail_scene"
    tools:context=".OrderDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderDtailOrderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtOrderDtailOrderID"
            tools:text="ID" />

        <TextView
            android:id="@+id/txtOrderDtailOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtOrderDtailOrderDate"
            tools:text="Ngày đặt hàng" />

        <TextView
            android:id="@+id/txtOrderDtailStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtOrderDtailStatus"
            tools:text="Trạng thái đơn hàng" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderDtailProvideInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtOrderDtailProvideInfo"
            tools:text="Cung cấp bởi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewOrderDetailStore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="TODO"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrderDetailStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrderDetailStoreName"
                    tools:text="Tên nhà kho" />

                <TextView
                    android:id="@+id/txtOrderDetailStoreStar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrderDetailStoreStar"
                    tools:text="Đánh giá sao" />

                <Button
                    android:id="@+id/btnOrderDetailViewStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnOrderDetailViewStore"
                    tools:text="Xem kho" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderDetailParacel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtOrderDetailParacel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewOrderDetailProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtOrderDetailProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrderDetailProductName"
                    tools:text="Tên sản phẩm" />

                <TextView
                    android:id="@+id/txtOrderDetailProvide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrderDetailProvide"
                    tools:text="Cung cấp bởi" />

                <TextView
                    android:id="@+id/txtOrdeDetailAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrdeDetailAmount"
                    tools:text="Tấn" />

                <TextView
                    android:id="@+id/txtOrderDetailPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtOrderDetailPrice"
                    tools:text="32.000đ" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOrderDtailProductTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDtailProductTotal"
                tools:text="Tổng số tiền sản phẩm" />

            <TextView
                android:id="@+id/txtOrderDtailProductTotalRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDtailProductTotalRS"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOrderDetailShippingTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDetailShippingTotal"
                tools:text="Tổng số tiền vận chuyển" />

            <TextView
                android:id="@+id/txtOrderDetailShippingTotalRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDetailShippingTotalRS"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtOrderDetailTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDetailTotal"
                tools:text="Tổng cộng" />

            <TextView
                android:id="@+id/txtOrderDetailTotalRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtOrderDetailTotalRS"
                android:textAlignment="textEnd" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>