<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckoutTxtTitle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckoutTxtTitle"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:srcCompat="@android:drawable/btn_dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckouttxtShippingUnit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtShippingUnit" />

        <TextView
            android:id="@+id/fragmentCheckouttxtShippingUnitResult"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckouttxtAddress"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtAddress" />

        <TextView
            android:id="@+id/fragmentCheckouttxtAddressResult"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckouttxtProductCost"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtProductCost" />

        <TextView
            android:id="@+id/fragmentCheckouttxtProductCostResult"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtProductCostResult"
            android:textAlignment="textEnd"
            android:textColor="#F44336"
            android:textSize="18sp"
            tools:text="123" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckouttxtShippingCost"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtShippingCost" />

        <TextView
            android:id="@+id/fragmentCheckouttxtShippingCostResult"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtShippingCostResult"
            android:textAlignment="textEnd"
            android:textColor="#F44336"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragmentCheckouttxtTotalCost"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtTotalCost" />

        <TextView
            android:id="@+id/fragmentCheckouttxtTotalCostResult"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/fragmentCheckouttxtTotalCostResult"
            android:textAlignment="textEnd"
            android:textColor="#F44336"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thanh toÃ¡n" />
    </LinearLayout>

</LinearLayout>