<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewOrderDetailProduct"
            android:layout_width="118dp"
            android:layout_height="99dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOrderDetailProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtOrderDetailProductName" />

            <TextView
                android:id="@+id/txtOrdeDetailAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtOrdeDetailAmount" />

            <TextView
                android:id="@+id/txtOrderDetailPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtOrderDetailPrice" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>